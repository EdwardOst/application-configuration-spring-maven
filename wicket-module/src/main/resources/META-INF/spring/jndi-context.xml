<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
">
    	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties">
			<bean class="java.util.Properties">
				<constructor-arg>
					<map>
						<entry key="database.username">
							<jee:jndi-lookup jndi-name="java:comp/env/username" />
						</entry>
						<entry key="database.password">
							<jee:jndi-lookup jndi-name="java:comp/env/password" />
						</entry>
						<entry key="database.url">
							<jee:jndi-lookup jndi-name="java:comp/env/url" />
						</entry>
					</map>
				</constructor-arg>
			</bean>
		</property>
	</bean>

</beans>
